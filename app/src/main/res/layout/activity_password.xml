<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Password">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/but1"
                android:text="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but2"
                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/but3"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/but4"
                android:text="4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but5"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/but6"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but7"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="7" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but8"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but9"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                 android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/but0"                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:text="0" />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:background="@android:color/white"
    android:id="@+id/butdelete"
    android:layout_weight="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_delete"
        android:tint="@android:color/black"
        android:layout_centerInParent="true"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:fontFamily="@font/montserrat"
                android:visibility="invisible"
                android:textSize="20dp"
                android:textStyle="bold"/>
</RelativeLayout>
        </LinearLayout>
    </GridLayout>

<!--    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_app" />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNL"
        android:id="@+id/logotext"
        android:fontFamily="@font/righteous_regular"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="60dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:buttonTint="#FFFFFF"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/radioButton"
            android:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/radioButton2"
            android:buttonTint="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/radioButton3"
            android:buttonTint="#FFFFFF" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logotext"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat"
        android:text="Enter code to open the app"
        android:textAlignment="center"
        android:textColor="#DAD3D3"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:text="Incorrect code"
        android:textColor="#FF0000"
        android:textSize="20dp"
        android:visibility="gone" />

</RelativeLayout>