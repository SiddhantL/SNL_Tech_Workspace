<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="9dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="9dp"
    android:background="@drawable/circular_blog"
    android:id="@+id/fullitem"
    android:layout_centerHorizontal="true"
    android:elevation="10dp">
        <ImageView
            android:id="@+id/item_images"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:src="@drawable/document"></ImageView>
        <TextView
            android:id="@+id/item_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_below="@+id/item_images"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_score2"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Content\nHi\nBye"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:textSize="24sp" />
</RelativeLayout>